<Window x:Class="_20190312.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20190312"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid Margin="5,30,5,5">
    <ScrollViewer Name="MyScroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
      <StackPanel Name="MyStackPanel" UseLayoutRounding="True">
        <Button Name="MyButton1" Content="button1"/>
        <Button Name="MyButton2" Content="button2"/>
        <Button Name="MyButton3" Content="button3"/>
        <Button Name="MyButton4" Content="button4"/>
        <Button Name="MyButton5" Content="button5 10Colors"/>
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Window>
